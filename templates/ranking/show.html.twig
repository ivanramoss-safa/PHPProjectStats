{% extends 'base.html.twig' %}

{% block title %}{{ ranking.name }}{% endblock %}

{% block body %}
    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <span class="badge bg-secondary mb-2">{{ ranking.category.name }}</span>
            <h1 class="display-5">{{ ranking.name }}</h1>
            <p class="text-muted">
                Creado por <strong>{{ ranking.user.name }}</strong> el {{ ranking.createdAt|date('d/m/Y') }}
            </p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('app_ranking_index') }}" class="btn btn-outline-secondary">
                ‚Üê Volver a mis rankings
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="list-group shadow">
                {% for item in items %}
                    <div class="list-group-item list-group-item-action d-flex align-items-center p-3">

                        
                        <div class="me-4 text-center" style="width: 40px;">
                            {% if item.position == 1 %}
                                <span style="font-size: 2rem;">ü•á</span>
                            {% elseif item.position == 2 %}
                                <span style="font-size: 1.8rem;">ü•à</span>
                            {% elseif item.position == 3 %}
                                <span style="font-size: 1.6rem;">ü•â</span>
                            {% else %}
                                <span class="badge bg-light text-dark rounded-circle p-2 fs-5 border">
                                    {{ item.position }}
                                </span>
                            {% endif %}
                        </div>

                        
                        {% if item.photo %}
                            <img src="{{ item.photo }}"
                                 alt="{{ item.name }}"
                                 class="rounded-circle me-4 border border-2"
                                 width="70" height="70"
                                 style="object-fit: cover;">
                        {% endif %}

                        
                        <div>
                            <h4 class="mb-1">{{ item.name }}</h4>
                            <p class="mb-0 text-muted">{{ item.extra }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
