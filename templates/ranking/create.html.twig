{% extends 'base.html.twig' %}

{% block title %}Crear Ranking - {{ category.name }}{% endblock %}

{% block body %}
    <h1 class="mb-4">Crear Ranking: {{ category.name }}</h1>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text"
                           name="q"
                           class="form-control"
                           placeholder="Buscar {{ category.type }}..."
                           value="{{ query }}"
                           autofocus>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        üîç Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <form method="post" action="{{ path('app_ranking_order', {id: category.id}) }}">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Selecciona hasta 10 elementos</h5>
            </div>
            <div class="card-body">
                {% if items is empty %}
                    <p class="text-muted text-center">
                        No se encontraron resultados. Intenta buscar con otros t√©rminos.
                    </p>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th width="50">
                                    <input type="checkbox" id="selectAll" onclick="toggleAll(this)">
                                </th>
                                <th width="80"></th>
                                <th>Nombre</th>
                                <th>Info</th>
                                <th>Datos</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in items %}
                                <tr>
                                    <td>
                                        <input type="checkbox"
                                               name="selected_items[]"
                                               value="{{ item.id }}"
                                               class="item-checkbox">
                                    </td>
                                    <td>
                                        {% if item.photo %}
                                            <img src="{{ item.photo }}"
                                                 width="50"
                                                 class="rounded-circle"
                                                 alt="{{ item.name }}">
                                        {% endif %}
                                    </td>
                                    <td><strong>{{ item.name }}</strong></td>
                                    <td>{{ item.extra }}</td>
                                    <td>{{ item.stats }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    
                    {% if paging.total > 1 %}
                        <nav>
                            <ul class="pagination justify-content-center">
                                {% for p in 1..paging.total %}
                                    <li class="page-item {% if p == paging.current %}active{% endif %}">
                                        <a class="page-link" href="?q={{ query }}&page={{ p }}">
                                            {{ p }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </nav>
                    {% endif %}
                {% endif %}
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg">
                ‚úÖ Continuar con Selecci√≥n
            </button>
            <a href="{{ path('app_ranking_new') }}" class="btn btn-secondary btn-lg">
                Cancelar
            </a>
        </div>
    </form>

    <script>
        function toggleAll(source) {
            const checkboxes = document.querySelectorAll('.item-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = source.checked;
            });
        }

        document.querySelectorAll('.item-checkbox').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const checked = document.querySelectorAll('.item-checkbox:checked').length;
                if (checked > 10) {
                    this.checked = false;
                    alert('Solo puedes seleccionar hasta 10 elementos');
                }
            });
        });
    </script>
{% endblock %}
