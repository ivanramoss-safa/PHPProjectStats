{% extends 'base.html.twig' %}

{% block title %}Entrenadores - F√∫tbol Stats{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">üë®‚Äçüíº Entrenadores</h1>
        <form method="get" class="d-flex">
            <input type="text" name="q" class="form-control me-2" placeholder="Buscar entrenador..." value="{{ searchQuery }}">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>

    {% if searchQuery %}
        <h4 class="mb-3">Resultados de b√∫squeda: "{{ searchQuery }}"</h4>
        {% if coaches is empty %}
            <div class="alert alert-info">No se encontraron entrenadores.</div>
        {% else %}
            <div class="row row-cols-1 row-cols-md-4 g-4">
                {% for coach in coaches %}
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body text-center">
                                <img src="{{ coach.photo }}" class="rounded-circles mb-3 shadow-sm" width="80" height="80" style="object-fit: cover; border-radius: 50%;">
                                <h5 class="card-title fw-bold text-truncate">{{ coach.name }}</h5>
                                <p class="text-muted small mb-2">{{ coach.team.name ?? 'Sin equipo actualmente' }}</p>
                                <a href="{{ path('coach_show', {id: coach.id}) }}" class="btn btn-outline-primary btn-sm stretched-link">Ver Perfil</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    {% else %}
        <h4 class="mb-3 text-warning"><i class="fas fa-star me-2"></i>Mejor Valorados</h4>
        {% if topRated is empty %}
            <div class="alert alert-light border">A√∫n no hay valoraciones suficientes para mostrar el ranking.</div>
        {% else %}
            <div class="row row-cols-1 row-cols-md-4 g-4">
                {% for item in topRated %}
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 position-relative animate-hover">
                            <span class="position-absolute top-0 end-0 badge bg-warning text-dark m-2 shadow-sm">
                                <i class="fas fa-star me-1"></i>{{ item.average_rating|number_format(1) }}
                            </span>
                            <div class="card-body text-center">
                                <img src="{{ item.photo }}" class="rounded-circles mb-3 shadow-sm" width="80" height="80" style="object-fit: cover; border-radius: 50%;">
                                <h5 class="card-title fw-bold text-truncate">{{ item.name }}</h5>
                                <p class="text-muted small mb-2">{{ item.career[0].team.name ?? 'Sin equipo' }}</p>
                                <a href="{{ path('coach_show', {id: item.id}) }}" class="btn btn-primary btn-sm stretched-link rounded-pill px-4">Ver Perfil</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    {% endif %}
</div>
{% endblock %}
