<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Fútbol Stats{% endblock %}</title>
    {% block stylesheets %}
        {{ importmap('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">⚽ Fútbol Stats</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="#">Ligas</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Rankings</a></li>
            </ul>
            <ul class="navbar-nav ms-auto">
                {% if app.user %}
                    <li class="nav-item"><span class="nav-link">Hola, {{ app.user.email }}</span></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Salir</a></li>
                    {#                 {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">Registro</a></li>
                    #}
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    {% block body %}{% endblock %}
</div>

{% block javascripts %}
{% endblock %}
</body>
</html>
