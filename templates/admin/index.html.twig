{% extends 'base.html.twig' %}

{% block title %}Panel de Administraci√≥n{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col">
            <h1>Panel de Administraci√≥n</h1>
        </div>
        <div class="col-auto">
            <a href="{{ path('admin_news_index') }}" class="btn btn-info me-2">
                üì∞ Gestionar Noticias
            </a>
            <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary">
                ‚ûï Nueva Categor√≠a
            </a>
        </div>
    </div>

    
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Categor√≠as Existentes</h5>
        </div>
        <div class="card-body">
            {% if categories is empty %}
                <p class="text-muted">No hay categor√≠as creadas a√∫n.</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Elementos</th>
                            <th>Fecha creaci√≥n</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td><strong>{{ category.name }}</strong></td>
                                <td>
                                    <span class="badge bg-info">{{ category.type }}</span>
                                </td>
                                <td>{{ category.categoryItems|length }}</td>
                                <td>{{ category.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    <a href="{{ path('app_admin_category_edit', {id: category.id}) }}"
                                       class="btn btn-sm btn-warning">
                                        ‚úèÔ∏è Editar
                                    </a>
                                    <form method="post"
                                          action="{{ path('app_admin_category_delete', {id: category.id}) }}"
                                          style="display:inline;"
                                          onsubmit="return confirm('¬øSeguro que quieres eliminar esta categor√≠a?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            üóëÔ∏è Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
